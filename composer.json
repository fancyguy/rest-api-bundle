{
    "name": "fancyguy/rest-api-bundle",
    "description": "Basic framework for developing REST APIs",
    "authors": [
        {
            "name": "Steve Buzonas",
            "email": "steve@fancyguy.com"
        }
    ],
    "license": "MIT",
    "autoload": {
        "psr-4": { "FancyGuy\\Bundle\\RestApiBundle\\": "src/" }
    },
    "autoload-dev": {
        "psr-4": { "FancyGuy\\Bundle\\RestApiBundle\\Test\\": "tests/" }
    },
    "require": {
        "fancyguy/symfony-bundle-component": "~1.0",
        "friendsofsymfony/rest-bundle": "~1.3",
        "willdurand/hateoas-bundle": "~0.2"
    },
    "require-dev": {
        "nelmio/api-doc-bundle": "~2.5"
    },
    "suggest": {
        "nelmio/api-doc-bundle": "Provides documentation generation for API endpoints"
    }
}
